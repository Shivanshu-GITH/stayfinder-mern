<% layout("/layouts/boilerplate") %>

<div class="container edit-page-container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">

      <div class="edit-card">
        <h2 class="edit-title">Create a New Listing</h2>

        <form action="/listings" method="POST" class="needs-validation" novalidate>
          
          <div class="mb-4">
            <label for="title" class="form-label">Title</label>
            <input 
              type="text" 
              id="title" 
              name="listing[title]" 
              placeholder="Give your place a catchy title"
              class="form-control"
              required
              minlength="5"
            />
            <div class="invalid-feedback">Title must be at least 5 characters long.</div>
          </div>

          <div class="mb-4">
            <label for="description" class="form-label">Description</label>
            <textarea 
              id="description" 
              name="listing[description]" 
              placeholder="Describe the vibe of your place..."
              class="form-control"
              rows="4"
              required
              minlength="20"
            ></textarea>
            <div class="invalid-feedback">Description must be at least 20 characters long.</div>
          </div>

          <div class="mb-4">
            <label for="image" class="form-label">Image Link</label>
            <input 
              type="url" 
              id="image" 
              name="listing[image][url]" 
              placeholder="https://example.com/image.jpg"
              class="form-control"
              pattern="https?://.+"
            />
            <div class="invalid-feedback">Please enter a valid image URL.</div>
          </div>

          <div class="row">
            <div class="mb-4 col-md-4">
              <label for="price" class="form-label">Price (â‚¹)</label>
              <input 
                type="number" 
                id="price" 
                name="listing[price]" 
                placeholder="e.g. 1200"
                class="form-control"
                required
                min="1"
              />
              <div class="invalid-feedback">Price must be greater than 0.</div>
            </div>

            <div class="mb-4 col-md-8">
              <label for="country" class="form-label">Country</label>
              <input 
                type="text" 
                id="country" 
                name="listing[country]" 
                placeholder="India"
                class="form-control"
                required
                pattern="^[A-Za-z ]+$"
              />
              <div class="invalid-feedback">Country name must contain letters only.</div>
            </div>
          </div>

          <div class="mb-4">
            <label for="location" class="form-label">Location</label>
            <input 
              type="text" 
              id="location" 
              name="listing[location]" 
              placeholder="Jaipur, Rajasthan"
              class="form-control"
              required
              pattern="^[A-Za-z ,]+$"
            />
            <div class="invalid-feedback">Location should contain only letters and commas.</div>
          </div>

          <button class="btn save-btn w-100 mt-3">
            Add Listing
          </button>

        </form>
      </div>

    </div>
  </div>
</div>
